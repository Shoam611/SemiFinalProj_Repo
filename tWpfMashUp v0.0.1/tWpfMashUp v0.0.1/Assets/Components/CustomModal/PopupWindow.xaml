<Window x:Class="tWpfMashUp_v0._0._1.Assets.Components.CustomModal.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tWpfMashUp_v0._0._1.Assets.Components.CustomModal"
        mc:Ignorable="d"
         ResizeMode="NoResize"
        WindowStyle="None"   
        Background="Transparent"
        Height="200" Width="350"
        AllowsTransparency="True">

    <Grid Background="Transparent">

        <Border Background="#2f3136" CornerRadius="15"  ClipToBounds="True">
            <Border.Clip>
                <RectangleGeometry RadiusY="15" RadiusX="15" Rect="0,0,350,200" />
            </Border.Clip>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="TopGrid" Background="#292b2f" MouseDown="Grid_MouseDown">
                    <TextBlock x:Name="tbTitle" HorizontalAlignment="Left" Margin="15,0,0,0" 
                               VerticalAlignment="Center" FontSize="19" Foreground="White" TextWrapping="Wrap" 
                               FontWeight="Medium"/>
                </Grid>
                <TextBlock Grid.Row="1" x:Name="tbCaption" HorizontalAlignment="Left" Margin="15,15,0,0" 
                                FontSize="16" Foreground="LightGray" TextWrapping="Wrap" VerticalAlignment="Top"
                               FontWeight="Medium"/>

                <Grid Grid.Row="2"  Background="#36393f"  VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" x:Name="Panel">

                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
